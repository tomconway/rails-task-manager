<div class="container">
  <h1>My tasks</h1>
  <div class="row flex-column col-6 mt-3">
    <% @tasks.each do |task| %>
    <span>
      <% if task.completed %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to raw('<i class="fas fa-trash-alt"></i>'), task_path(task),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>

      </span>
    <% end %>
      <%= link_to "Create new task", new_path %>
  </div>
</div>

